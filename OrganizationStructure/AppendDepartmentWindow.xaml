<Window x:Class="OrganizationStructure.AppendDepartmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrganizationStructure"
        mc:Ignorable="d"
        Title="Добавление отдела" Height="180" Width="250" VerticalAlignment="Top" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen" Activated="Window_Activated">
    <Grid>
        <Label x:Name="lblDepartmentID" Content="Департамент:" 
               Margin="10,10,0,0" Height="25" HorizontalAlignment="Left" 
               VerticalAlignment="Top" Width="220"/>
        <Label x:Name="lblDepartmentName" Content="Название отдела:" 
               Margin="10,45,0,0" Height="25" HorizontalAlignment="Left" 
               VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Width="220"/>
        <TextBox x:Name="tbxDepartment" Margin="11,70,10.6,0" Height="25" 
                       HorizontalAlignment="Center" VerticalAlignment="Top" 
                 Width="220" RenderTransformOrigin="0.5,0.5"/>
        <Button x:Name="btnAdd" Content="Добавить отдел" Margin="10,110,10,0" 
                Height="25" VerticalAlignment="Top" Click="btnAdd_Click" />
    </Grid>
</Window>
